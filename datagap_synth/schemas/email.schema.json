{
  "$id": "email.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["id", "when", "actor", "channel", "subject", "body"],
  "properties": {
    "id": {"type": "string"},
    "when": {"type": "string", "format": "date-time"},
    "actor": {"type": "string"},
    "channel": {"const": "email"},
    "thread_id": {"type": ["string", "null"]},
    "subject": {"type": "string"},
    "body": {"type": "string"},
    "referenced_query_id": {"type": ["string", "null"]}
  }
}

