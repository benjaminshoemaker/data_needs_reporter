{
  "$id": "slack.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["id", "when", "actor", "channel", "text"],
  "properties": {
    "id": {"type": "string"},
    "when": {"type": "string", "format": "date-time"},
    "actor": {"type": "string"},
    "channel": {"const": "slack"},
    "thread_id": {"type": ["string", "null"]},
    "text": {"type": "string"},
    "labels": {"type": "array", "items": {"type": "string"}},
    "referenced_query_id": {"type": ["string", "null"]}
  }
}

